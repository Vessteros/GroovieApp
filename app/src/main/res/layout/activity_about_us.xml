<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.activities.usefulSections.AboutUsActivity" android:background="@color/colorPrimaryDark">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout9"
            android:background="@color/colorPrimaryDark">

        <TextView
                android:text="О Нас"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:paddingLeft="10dp" android:paddingTop="10dp"
                android:paddingRight="10dp" android:paddingBottom="10dp" android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/colorAccentHelper"
                android:textAlignment="center" android:background="@color/colorPrimaryDark"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintHorizontal_bias="0.0">

            <TextView
                    android:text="@string/aboutUsFirstBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView12"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="24dp" android:paddingRight="24dp"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textColor="@color/colorAccent"
                    app:layout_constraintBottom_toTopOf="@+id/textView16" android:background="@color/colorPrimary"
                    android:textSize="13sp"/>
            <TextView
                    android:text="@string/aboutUsSecondBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:paddingLeft="24dp" android:paddingRight="24dp"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textColor="@color/colorAccent"
                    android:background="#36000000" android:textSize="13sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView17" android:layout_marginBottom="32dp"/>
            <TextView
                    android:text="@string/aboutUsThirdBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView17"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp" android:paddingTop="10dp" android:paddingBottom="10dp"
                    app:layout_constraintHorizontal_bias="0.0" android:textColor="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="13sp"
                    android:background="@color/colorPrimary"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>