<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LRActivity">
    <Button
            android:layout_width="307dp"
            android:layout_height="48dp"
            android:id="@+id/login" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAllCaps="false" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="#3097D1" android:textColor="#FFFFFF"
            android:text="@string/login"
            android:layout_marginTop="312dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="307dp"
            android:layout_height="48dp"
            android:id="@+id/register" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:background="#1f648b"
            android:text="@string/register"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="#FFFFFF"
            android:bufferType="spannable"/>
</android.support.constraint.ConstraintLayout>