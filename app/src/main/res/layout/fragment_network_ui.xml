<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".app.fragments.main.NetworkUIFragment">
    <ImageButton
            android:src="@color/design_default_color_primary_dark"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/vkbtn" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:background="@drawable/vk_icon"/>
    <ImageButton
            android:src="@color/design_default_color_primary_dark"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/tgbtn" app:layout_constraintStart_toEndOf="@+id/vkbtn"
            android:layout_marginStart="40dp" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:src="@color/design_default_color_primary_dark"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/fbbtn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/vkbtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <ImageButton
            android:src="@color/design_default_color_primary_dark"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageButton4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tgbtn"
            app:layout_constraintStart_toEndOf="@+id/fbbtn" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>