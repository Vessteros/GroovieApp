<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.vessteros.groovie">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".Groovie"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".app.activities.MainActivity">
        </activity>

        <meta-data
                android:name="android.security.net.config"
                android:resource="@xml/network_security_config"/>

        <activity android:name=".app.activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".app.activities.LoginActivity" android:theme="@style/AppTheme.SliderActivityTheme">
        </activity>
    </application>

</manifest>